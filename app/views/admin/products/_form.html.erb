<%= form_for(admin_product, html: {class: 'form-horizontal'}) do |f| %>
  <% if admin_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>

      <ul>
      <% admin_product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Tên sản phẩm", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>      
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Tên đường dẫn", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :alias_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Nội Dung", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.cktext_area :content, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Giá", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Giá khuyến mại", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :new_price , class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Hình ảnh</label>
    <div class="col-sm-10">
      <div id="myDropzone" class="dropzone">
        
      </div>
    </div>
  </div>
  <div class="form-group">
    <center><%= f.submit "Tạo mới", class: "btn btn-primary" %></center>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $("div#myDropzone").dropzone({ url: "/admin/products/image" });
  })
</script>